# ========================================
# UGLIES PLATFORM ENVIRONMENT CONFIGURATION
# ========================================

# Application Configuration
VITE_APP_NAME=UGLIES Platform
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Global Agricultural Social Commerce Platform"
VITE_APP_ENVIRONMENT=development
VITE_APP_URL=http://localhost:5173
VITE_APP_DOMAIN=localhost

# ========================================
# CORE BACKEND SERVICES
# ========================================

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
VITE_SUPABASE_JWT_SECRET=your_jwt_secret_here
VITE_SUPABASE_STORAGE_BUCKET=uglies-storage

# Real-time Configuration
VITE_ENABLE_REAL_TIME=true
VITE_REALTIME_HEARTBEAT_INTERVAL=30000
VITE_REALTIME_RECONNECT_ATTEMPTS=5

# ========================================
# EXTERNAL SERVICE INTEGRATIONS
# ========================================

# Error Monitoring (Sentry)
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=1.0
VITE_SENTRY_DEBUG=false

# Photo Enhancement (Pica AI)
VITE_PICA_AI_API_KEY=your_pica_ai_key_here
VITE_PICA_AI_BASE_URL=https://api.pica-ai.com
VITE_PICA_AI_TIMEOUT=30000

# Video Generation (Tavus)
VITE_TAVUS_API_KEY=your_tavus_api_key_here
VITE_TAVUS_BASE_URL=https://api.tavus.io
VITE_TAVUS_TIMEOUT=60000

# AI Search & Copilots (Dappier)
VITE_DAPPIER_API_KEY=your_dappier_key_here
VITE_DAPPIER_BASE_URL=https://api.dappier.com
VITE_DAPPIER_MODEL=gpt-4

# Monetization (RevenueCat)
VITE_REVENUECAT_PUBLIC_KEY=your_revenuecat_public_key_here
VITE_REVENUECAT_ENVIRONMENT=sandbox

# ========================================
# FEATURE FLAGS
# ========================================

# Core Features
VITE_ENABLE_AUTHENTICATION=true
VITE_ENABLE_GROUP_BUYING=true
VITE_ENABLE_MESSAGING=true
VITE_ENABLE_NOTIFICATIONS=true

# Advanced Features
VITE_ENABLE_PHOTO_ENHANCEMENT=true
VITE_ENABLE_VIDEO_GENERATION=true
VITE_ENABLE_AI_RECOMMENDATIONS=true
VITE_ENABLE_BLOCKCHAIN_FEATURES=true
VITE_ENABLE_MULTI_LANGUAGE=true

# Monitoring & Analytics
VITE_ENABLE_ERROR_MONITORING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_USER_ANALYTICS=true

# Development Features
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_DEMO_DATA=true
VITE_ENABLE_API_MOCKING=false

# ========================================
# SECURITY CONFIGURATION
# ========================================

# Authentication Security
VITE_JWT_EXPIRY=3600
VITE_SESSION_TIMEOUT=1800
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_API_RATE_LIMIT=100

# Content Security
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,webp,mp4,webm,pdf

# ========================================
# INTERNATIONALIZATION
# ========================================

VITE_DEFAULT_LOCALE=en
VITE_SUPPORTED_LOCALES=en,es,fr,de,zh,ja
VITE_FALLBACK_LOCALE=en
VITE_DATE_FORMAT=YYYY-MM-DD
VITE_TIME_FORMAT=HH:mm:ss